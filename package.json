{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.0.1"
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "start:frontend": "lerna run start --scope frontend --stream",
    "start:backend": "lerna run start --scope backend --stream",
    "test": "lerna run test --parallel",
    "test:frontend": "lerna run test --scope frontend --stream",
    "test:backend": "lerna run test --scope backend --stream",
    "build": "lerna run build --parallel",
    "build:frontend": "lerna run build --scope frontend --stream",
    "build:backend": "lerna run build --scope backend --stream"
  }
}
